{% extends 'base.html.twig' %}

{% block title %}Kingdom auto-care{% endblock %}
{% block stylesheets %}

{% endblock %}
{% block body %}
  <main class="container">  
            <div class="row ">
                <!-- categories -->
               <div class="bg-light background-dark col-3 col-sm-3 col-lg-2 d-none d-sm-block mr-5">
                    <h1>categories</h1>        
                    <div class="row mt-3">
                    {% for category in categories %}
                    {% if category.parent == null %}
                      <h2 class=" mt-2 m-auto medium"> {{category.name}}  </h2> 
                      {% else  %}
                      <a href="{{path('categories_list' , {slug:category.slug})}}" class="col-12 mt-2 rounded text-decoration-none text-white bg-dark p-3 text-wrap">{{category.name}}</a>  
                    {% endif %}
                    {% endfor %}
                    </div>      
                </div>
                
                <!-- produits -->
                <div class="col-12 col-sm-9 center">
                    <div class="row ">   
                      {% for category in categories %}

                        {% if category.products is defined %}
                            {% for product in category.products %}
                            <div class="col-6 col-lg-4 col-md-6  mb-4">
                                <div class="card h-100">
                                    <img src="{{ asset('assets/uploadsproducts/mini/300x300-') }}" class="d-block w-100" alt="{{ product.name }}">
                                  <div class="card-body">
                                    <h4 class="card-title">{{product.name}}</h4>
                                    <h5>{{product.prix}} $</h5>
                                    <p class="card-text">{{product.description}}</p>
                                  </div>
                                  <div class="card-footer">
                                    <a href="{{path('products_details', {slug:product.slug})}}" class="btn btn-primary btn-block">Voir le Produit</a>
                                  </div>
                                </div>
                            </div>
                            {% endfor %}
                        {% endif %}
                        
                        {% endfor %}
                    
                     
                      </div>

                </div>             
            </div>
       
      </main>

{% endblock %}

