{% extends 'base.html.twig' %}

{% block title %}Kingdom auto-care{% endblock %}
{% block body %}
  <main class="container">  
            <div class="row justify-content-around mt-5 ">
                <!-- categories -->
               <div class="bg-light background-dark col-4 col-sm-4 col-lg-2 d-none d-sm-block">
                    <h1>categories</h1>        
                    <div class="row mt-3">
                  {% for category in categories %}
                    {% if category.parent == null %}
                     <h2 class="mt-2 m-auto medium">{{ category.name }}</h2>
                      {% for subcategory in categories %}
                        {% if subcategory.parent is not null and subcategory.parent.id == category.id %}
                          <a href="{{ path('categories_list', {slug: subcategory.slug}) }}" class=" col-12 mt-2 rounded text-decoration-none text-white bg-dark p-3 text-wrap">{{ subcategory.name }}</a>
                          
                        {% endif %}
                      {% endfor %}
                      
                    {% endif %}
                  {% endfor %}


                    
                    </div>      
                </div>
                
                <!-- produits -->
                <div class="col-12 col-sm-8 center">
                    <div class="row ">
                      <!-- carousel -->
                      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner mb-5" style="height: 500px; background-image: cover; background-position: center;">
                          <div class="carousel-item active">
                            <img class="d-block w-100 h-10" src="{{ asset('assets/uploads/image0.png') }}" alt="First slide" >
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100 h-50" src="{{ asset('assets/uploads/image1.png') }}" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100 h-50" src="{{ asset('assets/uploads/image2.png') }}" alt="Third slide">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>
                      <!--carousel ends-->

                      {% for category in categories %}
                        {% if category.products is defined %}
                            {% for product in category.products %}
                            <div class="col-6 col-lg-4 col-md-6  mb-4">
                                <div class="card card-height" >
                                    <img src="{{ asset('assets/images/products/' ~ product.image.name ) }}" class="d-block image-height"  alt="{{ product.name }}">
                                  <div class="card-body">
                                    <h4 class="card-title">{{product.name}}</h4>
                                    <h5>Prix :{{product.prix}} $</h5>
                                    <p class="card-text">{{product.description}}</p>
                                  </div>
                                  <div class="card-footer">
                                    <a href="{{path('products_details', {slug:product.slug})}}" class="btn btn-primary btn-block">Voir le Produit</a>
                                  </div>
                                </div>
                            </div>
                            {% endfor %}
                        {% endif %}
                        
                        {% endfor %}
                    
                      
                      </div>

                </div>             
            </div>
       
      </main>

{% endblock %}

